<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title>DormHost :: <%= controller.controller_name.capitalize %></title>
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
		<%= stylesheet_link_tag 'layout', 'text', 'datagrid' %>
		<%= javascript_include_tag :defaults %>
	</head>

	<body>
		<div id="wrap">
<!-- 	    	<%= link_to '<div id="header"></div>', home_path('home') %> -->
		<div id="header">
			<% if logged_in? -%>
				<div id="mini_logout">
				<div id="user-bar-greeting">Logged in</div> 
				<div id="user-bar-action"  >(<%= link_to "log out", logout_path, { :title => "Log out" }    %>)</div>
				</div>
			<% else -%>
			<div id="mini_login">
				<% form_tag session_path do -%>
				<label for="username" style="font-size: 80%">Username:</label> 
				<%= text_field_tag 'login', @login %>
				<br />
				<label for="password" style="font-size: 80%">Password:</label>
				<%= password_field_tag 'password', nil %>
				<br />
				<%= link_to 'Register', new_user_path %>
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    
				<%= submit_tag 'Log in' %>					
				<!-- Uncomment this if you want this functionality -->
				<!--
				<label for="remember_me">Remember me:</label>
				<%= check_box_tag 'remember_me', '1', @remember_me %>
				<br /> -->
				<% end -%>
			</div>
			<% end -%>
		</div>
			
			<br />
	        <div id="nav">
					<table bgcolor = #0066ff>
					<tr>
					<td width = "575">	
			    		<ul>
			         		<li><%= link_to 'Homepage', home_path('home') %></li>
							<li><%= link_to 'Profile', profiles_path %></li>
							<li><%= link_to 'Your Room', rooms_path %></li>
							<li><%= link_to 'Search Room', room_profiles_path %></li>
						</ul>
					</td>
					<td width = "325">
						<img src="images/tempSearch.png" />
					</td>
					</tr>
					</table>
	        	
	        </div> <!-- end of nav div -->
			<div style="clear:both;"></div>
	    	<div id="body">
				<p style="color: green" id="notice"><%= flash[:notice] %></p>
				<%= yield %>
			</div> <!-- end of body div -->

			<%= render :partial => "partials/footer" %>
		</div><!-- end of wrap div -->
	</body>
</html>