<h1>New modification</h1>

<% form_for(@modification) do |f| %>
  <%= f.error_messages %>
  
  	<p>
		<%= f.label :check_in %><br />
		<%= f.date_select :check_in, :order => [:month, :day, :year] %>
	</p>
	
	<p>
		<%= f.label :check_out %><br />
		<%= f.date_select :check_out, :order => [:month, :day, :year] %>
	</p>
  
  	<p>
		<%= f.label :guests %><br />
		<%= f.text_field :guests %>
	</p>
	
	<p>
		<% f.label :comments %><br />
		<%= f.text_area :comments, :rows => 6, :cols => 40 %>
	</p>
	
	
	
	
	<%= f.hidden_field :approved, :value=>0%>
	
	<% fields_for :transaction, @transaction do |transaction_fields| %>
    	<%= transaction_fields.hidden_field :renter_id, :value => params[:renter_id] %>
		<%= transaction_fields.hidden_field :room_id, :value => params[:room_id] %>
  	<% end %>


  <p>
    <%= f.submit "Create" %>
  </p>
  
<% end %>



<%= link_to 'Back', modifications_path %>
