<h1>Editing <%=h @room_profile.bed_type %></h1><br>


<% form_for(@room_profile, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

	<table>
		<tr>
			<td width="355" valign= "top">
	<p>
		<%= f.label :bed_type %>:<b style="color:red;">*</b><br />
		<%= f.text_field :bed_type, :size => 42 %><BR />
		<i style="font-size:10px;">I.e. double, queen, sofa, air mattress, etc.</i>
	</p>
	<p>
		<%= f.label (:max_capacity, "Available spots") %><b style="color:red;">*</b><br />
		<%= f.text_field :max_capacity, :size => 20 %><BR />
		<i style="font-size:10px;">How many people would you be willing to accomdate?</i>
	</p>
	<p>
		<%= f.label :pets %><b style="color:red;">*</b><br />
		<%= f.text_field :pets, :size => 42 %><BR />
		<i style="font-size:10px;">Do you have pets at your residence?</i>
	</p>
	<p>
		<%= f.label (:food, 'Is there food available for the renter?') %><b style="color:red;">*</b><br />
		<%= f.text_area :food, :rows => 2, :cols => 40 %><BR />
		<i style="font-size:10px;">I.e. would you provide breakfast, coffee, etc?</i>
	</p>
	<p>
		<%= f.label (:roommates, "Number of roomates") %><b style="color:red;">*</b>
		<%= f.text_field :roommates, :size => 2 %><BR />
		<i style="font-size:10px;">How many other people do you live with?</i>
	</p>
	<p>
		<%= f.label (:internet, "Internet available?") %>
		<%= f.check_box :internet %>
	</p>
	<p>
		<%= f.label (:on_campus, "On campus?") %>
		<%= f.check_box :on_campus %>
	</p>
	</td>
	
	<td valign="top">
	<p>
		<%= f.label :cost %><b style="color:red;">*</b><br />
		<%= f.text_field :cost, :size => 10 %>
	</p>
	<p>
		<%= f.label :additional_notes %><b style="color:red;">*</b><br />
		<%= f.text_area :notes, :rows => 5, :cols => 40 %><BR />
		<i style="font-size:10px;">Any specific details regarding the availability of the room, or <BR> anything else a renter should know.</i>
	</p>
		<br><br>
  <div>
    <%= f.label(:photo, 'Upload photo') %>
    <%= f.file_field(:photo) %>
  </div>

  <%- unless @room_profile.new_record? || !@room_profile.photo? -%>
    <div>
      <%= f.label(:delete_photo, 'Delete photo') %>
      <%= image_tag(@room_profile.photo.url, :alt => 'Photo', :title => 'Current photo', :width => 300) %>
      <%= f.check_box(:delete_photo) %>
    </div>
  <%- end -%>	
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @room_profile %> |
<%= link_to 'Back', room_profiles_path %>
</td></tr></table>
