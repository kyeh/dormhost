<h1>New room_profile</h1>

<% form_for(@room_profile) do |f| %>
  <%= f.error_messages %>

	
	<!-- TODO: IMAGE UPLOAD -->
	
	<p>
		<b>Room Type</b>:<br>
		<%= f.text_field :type, :size => 50 %>
	</p>
	<p>
		<b>Bed Type</b>:<br>
		<%= f.text_field :bed_type, :size => 50 %>
	</p>
	<p>
		<b>Max Capacity</b>:<br>
		<%= f.text_field :max_capacity, :size => 20 %>
	</p>
	<p>
		<b>Pets</b>:<br>
		<%= f.text_field :pets, :size => 50 %>
	</p>
	<p>
		<b>Food Available</b>:<br>
		<%= f.text_field :food, :size => 100 %>
	</p>
	<p>
		<b>Roommates</b>:<br>
		<%= f.text_field :roommates, :size => 2 %>
	</p>
	<p>
		<b>Internet Available?<b><br>
		<%= f.check_box :internet %>
	</p>
	<p>
		<b>On Campus?<b><br>
		<%= f.check_box :on_campus %>
	</p>
	<p>
		<b>Cost</b>:<br>
		<%= f.text_field :cost, :size => 10 %>
	</p>
	<p>
		<b>Notes</b>:<br>
		<%= f.text_field :notes, :size => 255 %>
	</p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', room_profiles_path %>
