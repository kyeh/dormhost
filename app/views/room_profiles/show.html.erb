<h1><%=h @room_profile.bed_type %></h1>
<table>
	<tr>
		<td>
			<% if @room_profile.photo_file_name.nil? %>
			<%= image_tag 'questionMark.png', :width => "300" %>
			<% else %>
			<%= image_tag(@room_profile.photo.url, :width => "300") %>
			<% end %>
		</td>
		<td>
<p>
  <b>Bed Type:</b>
  <%=h @room_profile.bed_type %>
</p>
<p>
  <b>Max Capacity:</b>
  <%=h @room_profile.max_capacity %>
</p>
<p>
  <b>Pets:</b>
  <%=h @room_profile.pets %>
</p>
<p>
  <b>Food:</b>
  <%=h @room_profile.food %>
</p>
<p>
  <b>Roommates:</b>
  <%=h @room_profile.roommates %>
</p>
<p>
  <b>Internet?:</b>
  	<% if @room_profile.internet == true %>Yes
	<% else %>No
	<% end %>
</p>

<p>
  <b>On Campus?:</b>
  	<% if @room_profile.on_campus == true %>Yes
	<% else %> No
	<% end %>
</p>
<p>
  <b>Cost:</b>
  <%=h number_to_currency(@room_profile.cost) %>
</p>
<p>
  <b>Notes:</b>
  <%=h @room_profile.notes %>
</p>

</td>
</tr>
</table>
<%= link_to('< Back to My Listings', rooms_path) %>
